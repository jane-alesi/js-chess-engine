{
  "name": "js-chess-engine",
  "version": "0.1.0",
  "description": "Pure JavaScript Chess Engine inspired by Atari Video Chess",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "live-server --port=3000 --open=/index.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/ *.js *.json *.md",
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch"
  },
  "keywords": [
    "chess",
    "javascript",
    "game",
    "ai",
    "minimax",
    "chess-engine",
    "browser-game"
  ],
  "author": "Jane Alesi <ja@satware.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jane-alesi/js-chess-engine.git"
  },
  "bugs": {
    "url": "https://github.com/jane-alesi/js-chess-engine/issues"
  },
  "homepage": "https://jane-alesi.github.io/js-chess-engine",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "live-server": "^1.2.2",
    "prettier": "^2.8.8",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}